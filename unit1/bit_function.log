#include <stdio.h>
#include <ctype.h>


union a{
	int x;
	short y;
	char z;
	double c;
}a;

int main(){
    int x=12;
    //12=1100(2)
    int y=10;
    //10=1010(2);
    printf("1100&1010=1000 %d\n",x&y);
    printf("1100|1010=1110 %d\n",x|y);
    printf("1100^1010=110 %d\n",x^y);
    printf("~1010=0101 %d\n",~y);
	
    printf("~1010>>2 %d\n",y>>2);
    printf("~1010<<2 %d\n",y<<2);

	int n1=15;
	short n2=15;
	unsigned short n3=15;
	unsigned char c=15;
	n1<<=15;
	n2<<=15;
	n3<<=15;
	c<<=6;
	printf("n1=%x,n2=%d,n3=%d,c=%x,c<<4=%d\n",n1,n2,n3,c,c<<4);
	a.c=188;
	printf("%08lf\n",a.c);
	a.z='c';
	if(isupper(a.z)) printf("a共用体里面的成员z是大写字母\n");
	if(islower(a.z)) printf("a共用体里面的成员z是小写字母\n");



	return 0;
}


1100&1010=1000 8
1100|1010=1110 14
1100^1010=110 6
~1010=0101 -11
~1010>>2 2
~1010<<2 40
n1=78000,n2=-32768,n3=32768,c=c0,c<<4=3072
